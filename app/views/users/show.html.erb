<% provide(:title, @user.user_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.user_name %>
      </h1>
      <h2>Following: <%= @user.following.count %></h2>
      <h2>Followers: <%= @user.followers.count %></h2>
    </section>
    <section class="stats">
    <!--   <%= render 'shared/stats' %> -->
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' unless current_user.id == @user.id  %>
    <h3>Followers</h3>
    <% if @user.followers.any? %>
      <ul class="users follow">
        <%= render @user.followers %>
      </ul>
    <% end %>
    <h3>Following</h3>
    <% if @user.following.any? %>
      <ul class="users follow">
        <%= render @user.following %>
      </ul>
    <% end %>
  </div>
</div>