<div class="posts-wrapper row">
  <% @posts.reverse_each do |post| %>
    <div class="post">
      <div class="post-head">
        <div class="name">
          <%= post.user.user_name %>
        </div>
      </div>
      <div class="image center-block">
        <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %>
        <div class="sm-img-container">
          <a href="#"><img class="sm-image" src="http://ak2.polyvoreimg.com/cgi/img-thing/size/l/tid/134058139.jpg" /></a>
          <a href="#"><img class="sm-image" src="http://ak2.polyvoreimg.com/cgi/img-thing/size/l/tid/125902548.jpg" /></a>
          <a href="#"><img class="sm-image" src="http://ak1.polyvoreimg.com/cgi/img-thing/size/l/tid/144253592.jpg" /></a> 
          <a href="#"><img class="sm-image" src="http://ak1.polyvoreimg.com/cgi/img-thing/size/l/tid/139159388.jpg" /></a>
        </div>
      </div>
      <p class="supertitle">
        <%= post.supertitle %>
      </p>
    </div>
  <% end %>
</div>

