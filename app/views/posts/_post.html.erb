<div class="posts-wrapper">
  <div class="post">
    <div class="post-head">
      <div class="thumb-img"></div>
      <div class="user-name">
        <%= post.user.user_name %>
      </div>
    </div>
    <div class="image center-block">
      <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %>
    </div>
    <div class="post-bottom">
      <div class="supertitle">
        <div class="supertitle-content">
          <div class="user-name">
            <%= post.user.user_name %>
          </div>
          <%= post.supertitle %>
        </div>
        <div class="comments" id="comments_<%= post.id %>">
          <% if post.comments %>
          <%= render post.comments, post: post %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="comment-like-form row">
      <div class="like-button col-sm-1">
        <span>(class="glyphicon glyphicon-heart-empty")</span>
      </div>
      <div class="comment-form col-sm-11">
        <%= form_for [post, post.comments.build ] do |f| %>
        <%= f.text_field :content, placeholder: 'Add a comment...', class: "comment_content", id: "comment_content_#{post.id}" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="InstagramAPI">
  <ul>
    <% image.each do |i| -%>
      <li>
        <% row.each do |i| %>
          <%= link_to(image_tag(i.url(:square), :class => 'InstagramAPI_image', :supertitle => i.supertitle, :border => 0, :medium => "640x" ), i.url_imagepage) %>
        <% end %>
      </li>
    <% end -%>
  </ul>
</div>